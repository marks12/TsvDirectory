function setBack(src,id,image_id)
{
	$(id).css('background', 'url('+src+')');
	$(id).css('background-size', '100% auto');
	$('#selected_back').val(image_id);
}

function unsetBack(id)
{
	$(id).css('background-image', 'none');
	$('#selected_back').val('');
	$('#edited-item').html('<img class="transparent25" width="100%" data-src="holder.js/900x500/auto/#666:#666" alt="900x500" src="data:image/svg+xml;base64," data-holder-rendered="true"><div class="carousel-caption">Carousel caption</div>');
